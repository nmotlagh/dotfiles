# File: ~/.bash_aliases

# Safer deletes
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Directory listing
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'

# Git shortcuts
alias gs='git status'
alias ga='git add .'
alias gc='git commit -m'
alias gp='git push'
alias gl='git pull'

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Misc
alias h='history'
alias c='clear'
alias v='vim'
